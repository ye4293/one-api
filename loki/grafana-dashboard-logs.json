{
  "dashboard": {
    "title": "One-API 日志监控",
    "tags": ["loki", "logs", "one-api"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP 访问日志（单行格式）",
        "type": "logs",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 24,
          "h": 12
        },
        "targets": [
          {
            "expr": "{job=\"oneapi\", msg=\"HTTP request\"} | json | line_format \"{{.ts}} [{{.level}}] {{.method}} {{.path}} {{.status}} {{.latency_ms}}ms - {{.client_ip}}\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "wrapLogMessage": false,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      },
      {
        "id": 2,
        "title": "系统日志（单行格式）",
        "type": "logs",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "{job=\"oneapi\"} | json | msg != \"HTTP request\" | line_format \"{{.ts}} [{{.level}}] {{.msg}}\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": false,
          "wrapLogMessage": false,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      },
      {
        "id": 3,
        "title": "错误和警告日志",
        "type": "logs",
        "gridPos": {
          "x": 0,
          "y": 20,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "{job=\"oneapi\", level=~\"warn|error\"} | json | line_format \"{{.ts}} [{{.level | ToUpper}}] {{.msg}} {{if .path}}| {{.method}} {{.path}} {{.status}}{{end}}\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": false,
          "wrapLogMessage": false,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      }
    ],
    "refresh": "10s",
    "schemaVersion": 38,
    "version": 1
  }
}
