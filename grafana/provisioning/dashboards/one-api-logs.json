{
  "dashboard": {
    "title": "One-API Logs",
    "tags": ["logs", "one-api"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "错误日志流",
        "type": "logs",
        "targets": [
          {
            "expr": "{service=\"one-api\", stream=\"error\"}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "options": {
          "showLabels": true,
          "showTime": true,
          "wrapLogMessage": false,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 2,
        "title": "错误率（5分钟）",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate({service=\"one-api\", stream=\"error\"}[5m]))",
            "refId": "A",
            "legendFormat": "错误率"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "yaxes": [
          {
            "format": "short",
            "label": "日志/秒"
          }
        ]
      },
      {
        "id": 3,
        "title": "按级别统计（5分钟）",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (level) (count_over_time({service=\"one-api\"} | json [5m]))",
            "refId": "A",
            "legendFormat": "{{level}}"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "所有日志（可筛选）",
        "type": "logs",
        "targets": [
          {
            "expr": "{service=\"one-api\"}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 10,
          "w": 24,
          "x": 0,
          "y": 14
        }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
